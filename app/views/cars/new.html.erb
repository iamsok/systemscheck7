  <h2> Add a new car </h2>

  <%= form_for Car.new do |f| %>
  <% if @car.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@manufacturer.errors.count, "error") %> prohibited this manufacturer from being submitted:</h2>
    <ul>
      <% @manufacturer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :manufacturer_id %>
    <%= f.collection_select :manufacturer_id, Manufacturer.all.order(:name), :id, :name, include_blank: true %>
  </div>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>

  <div>
    <%= f.label :mileage %><br />
    <%= f.text_field :mileage %>
  </div>

  <div>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div><%= f.submit "Add New Car", class: "button active" %></div>
<% end %>
